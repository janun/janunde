root = true

[*]
end_of_line = lf
charset = utf-8

[*.py]
indent_style = space
indent_size = 4
# isort settings:
known_first_party=janunde
known_third_party=django,humanize,modelcluster,pillow,requests,simplejson,six,taggit,wagtail,willow
default_section=FIRSTPARTY
skip_glob=venv

[*.{js,scss,html,json}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
